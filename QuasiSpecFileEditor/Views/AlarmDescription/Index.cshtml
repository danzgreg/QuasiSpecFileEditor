            @Html.DisplayFor(modelItem => item.Hold)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ParameterName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TargetLimit)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.AlarmDescriptionID }) |
            @Html.ActionLink("Details", "Details", new { id=item.AlarmDescriptionID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.AlarmDescriptionID })
